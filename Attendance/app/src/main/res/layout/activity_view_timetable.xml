<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:padding="16dp"
              xmlns:tools="http://schemas.android.com/tools"
              tools:context="att.attendanceapp.ViewTimetable" android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No courses found for this day"
        android:id="@+id/tvViewTimetableNoDataFound" android:visibility="invisible"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rviewMyTimetable"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
