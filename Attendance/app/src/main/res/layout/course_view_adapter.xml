<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course code"
        android:id="@+id/tvAdapterCourseCode"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Name"
        android:id="@+id/tvAdapterCourseName"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/tvAdapterCourseCode"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/tvAdapterCourseDescription"
        android:layout_gravity="right"
        android:layout_toRightOf="@+id/tvAdapterCourseName"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>