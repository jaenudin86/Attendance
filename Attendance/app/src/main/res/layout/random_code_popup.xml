<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1234" android:layout_marginTop="20dp"
        android:id="@+id/tvRandomCode"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/btnRandomCodeOk"
        android:layout_below="@+id/ibtnRandomCodeRefresh"
        android:layout_centerHorizontal="true" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtnRandomCodeRefresh" android:src="@drawable/icon_refresh"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tvRandomCode"
        android:layout_toEndOf="@+id/tvRandomCode" android:layout_marginLeft="20dp"/>
</RelativeLayout>